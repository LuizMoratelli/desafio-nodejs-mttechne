{
  "name": "cash-flow-control",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "Luiz Moratelli <la.moratelli@gmail.com>",
  "license": "ISC",
  "scripts": {
    "commit": "cz",
    "start": "node dist/src/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "test": "jest --silent --noStackTrace --runInBand",
    "test:verbose": "jest --runInBand",
    "test:unit": "npm test --watch -c jest-unit.config.ts",
    "test:integration": "npm test --watch -c ./jest-integration.config.ts",
    "test:staged": "npm test --findRelatedTests",
    "test:ci": "npm test --coverage"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./cash-flow-control/node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.6",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.42.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongodb": "^5.6.0"
  }
}